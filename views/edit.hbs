<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-5">
            <form action="/records/{{ record._id }}?_method=PUT" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">名稱*</label>
                    <input id="name" type="text" name="name" class="form-control" value="{{record.name}}"
                        required="required">
                </div>

                <div class="mb-3">
                    <label for="date" class="form-label">Start date:</label> <br>
                    <input type="date" id="date" name="date" min="2000-01-01" class="form-control" max="2100-12-31"
                        value="{{ record.date }}" required="required">
                </div>

                <div class="mb-3">
                    <label for="categoryId" class="form-label">類別*</label>
                    <select id="categoryId" name="categoryId" class="form-select" aria-label="category selection"
                        required="required">

                        <option selected disabled>{{record.categoryId.name}}</option>

                        {{#each categories}}
                        <option value="{{this._id}}">{{ this.name }}</option>
                        {{/each}}

                    </select>

                </div>

                <div class="mb-3">
                    <label for="amount" class="form-label">金額</label>
                    <input id="amount" name="amount" type="text" value="{{record.amount}}" class="form-control"
                        required="required">
                </div>


                <div class="col-12">
                    <button class="btn btn-primary" type="submit">確認修改</button>
                    <a class="btn btn-dark" href="/">back</a>
                </div>


            </form>
        </div>
    </div>
</div>