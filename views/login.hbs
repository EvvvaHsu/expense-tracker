
    <div class="card card-body col-md-5 m-auto mt-5">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}

      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
        <a href="/auth/google" class="btn btn-info btn-block">Google Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a class="text-decoration-none" href="/users/register">Register</a>
      </p>
    </div>
